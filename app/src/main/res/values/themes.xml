<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExemploPix" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonPixFragment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:enabled">false</item>
        <item name="android:drawableEnd">@drawable/ic_next_24</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_layout_pix</item>
        <item name="android:layout_marginEnd">@dimen/margin_layout_pix</item>
        <item name="android:layout_marginBottom">@dimen/margin_layout_pix</item>
        <item name="android:text">@string/proximo</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="TextViewPixValorTransf" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginStart">@dimen/margin_layout_pix</item>
        <item name="android:layout_marginTop">@dimen/margin_top_pix</item>
        <item name="android:textColor">@color/textvalor_color</item>
        <item name="android:textSize">@dimen/text_view_valor_transf</item>
    </style>

    <style name="EditTextPix" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:layout_marginStart">@dimen/margin_layout_pix</item>
        <item name="android:layout_marginTop">@dimen/margin10dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_layout_pix</item>
        <item name="android:textColor">@color/black</item>
        <item name="minHeight">@dimen/min_heigh_et</item>

    </style>

    <style name="TextViewPixToqueVizu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginTop">@dimen/margin_layout_pix</item>
        <item name="android:layout_marginEnd">@dimen/margin_layout_pix</item>
        <item name="android:text">@string/toque_para_vizualizar</item>
        <item name="android:textColor">@color/black</item>
        <item name="paddingStart">@dimen/margin10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableEndCompat">@drawable/ic_visibility_24</item>
    </style>

    <style name="TextViewPixTxtValor">
        <item name="android:layout_marginTop">@dimen/margin_layout_pix</item>
        <item name="android:layout_marginEnd">@dimen/margin_layout_pix</item>
        <item name="android:text">@string/r_10000_00</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/toolbar_pix_fragment</item>
    </style>

    <style name="TextViewSaldoLimite" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginStart">@dimen/margin_layout_pix</item>
        <item name="android:layout_marginTop">@dimen/margin_layout_pix</item>
        <item name="android:text">@string/saldo_limite</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/toolbar_pix_fragment</item>
    </style>

    <style name="MaterialToolbarPix" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="menu">@menu/menu_pix</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="navigationIcon">@drawable/ic_back_24</item>
        <item name="title">@string/pix</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="TextViewInfo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MaterialToolbarInfo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="navigationIcon">@drawable/ic_back_24</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>