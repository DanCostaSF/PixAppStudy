<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="br.com.android.exemplopix.TransferViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    app:navigationOnClickListener="@{() -> vm.onNavigationClick()}"
                    app:title="@string/transferir"
                    style="@style/MaterialToolbarInfo" />
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/margin_toolbar_pix"
                android:text="@string/digite_a_chave_do_recebedor"
                android:textColor="@color/textvalor_color"
                android:textSize="@dimen/text_view_valor_transf"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chave_pix"
                app:layout_constraintTop_toBottomOf="@id/textView"
                android:textStyle="bold"
                android:textColor="@color/cor_pix_letra"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/margin_toolbar_pix"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/editChavePix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edittext_chavepix"
                android:paddingBottom="22dp"
                android:textColor="@color/black"
                android:text="@={vm.editText}"
                android:textColorHint="@color/hint_edittext"
                android:textSize="16sp"
                android:maxLength="100"
                android:layout_marginStart="@dimen/margin_toolbar_pix"
                android:layout_marginEnd="@dimen/margin_toolbar_pix"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pixManual"
                    android:layout_width="match_parent"
                    android:background="@drawable/ripple_effect"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_marginStart="@dimen/margin_toolbar_pix"
                    android:layout_marginEnd="@dimen/margin_toolbar_pix"
                    app:layout_constraintTop_toBottomOf="@id/editChavePix">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pix_manual"
                        android:textColor="#606060"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/pixmanualtext"
                        android:textColor="#989595"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/ic_next_24"
                        android:backgroundTint="#AAA6A6"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/pixManual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_toolbar_pix"
                android:layout_marginStart="@dimen/margin_toolbar_pix"
                android:layout_marginEnd="@dimen/margin_toolbar_pix"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/favoritos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/favoritos"
                    android:textColor="#8F8C8C"
                    android:textStyle="bold"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/editTextSearch"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/favoritos"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:drawableEnd="@drawable/ic_search_24"
                    android:hint="@string/buscar"
                    android:paddingBottom="22dp"
                    android:textColorHint="#B6B4B4"/>

                <androidx.recyclerview.widget.RecyclerView
                    tools:itemCount="5"
                    tools:listitem="@layout/contacts_pix_adapter"
                    android:id="@+id/recycler"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/editTextSearch"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:scrollbars="vertical"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/margin_toolbar_pix"
                android:layout_marginEnd="@dimen/margin_toolbar_pix"
                android:src="@drawable/ic_next_24"
                android:enabled="@{vm.isEnabled()}"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>